{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "es2017",
    "lib": ["es2015"],
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "exclude": ["dist"],
  "include": ["./src/**/*.ts"]
}
